<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".IniciarSesion">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="102dp"
                android:layout_marginTop="104dp"
                android:text="Iniciar Sesión"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#0F0303"
                android:textColorLink="#08448A"
                android:textSize="36sp"
                app:fontFamily="@font/belleza" />

            <EditText
                android:id="@+id/editText_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="102dp"
                android:layout_marginTop="250dp"
                android:ems="10"
                android:fontFamily="@font/belleza"
                android:hint="Correo electrónico"
                android:inputType="textPersonName"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <EditText
                android:id="@+id/editText_contrasena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="102dp"
                android:layout_marginTop="320dp"
                android:ems="10"
                android:fontFamily="@font/belleza"
                android:hint="Constraseña"
                android:inputType="textPassword"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#C2B7B7" />

            <Button
                android:id="@+id/button_iniciar_sesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="390dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="80dp"
                android:text="Iniciar Sesión" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="500dp"
                android:layout_marginBottom="72dp"
                android:text="¿No tiene cuenta?"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#C2B7B7"
                app:fontFamily="@font/belleza" />

            <Button
                android:id="@+id/button_crear_cuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="500dp"
                android:text="Crear Cuenta" />
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>